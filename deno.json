{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["deno.window"],
        "strict": true
    },
    "lint": {
        "files": {
            "exclude": ["src/*"]
        },
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": ["no-unused-vars"]
        }
    },
    "fmt": {
        "files": {
            "exclude": ["src/*"]
        },
        "options": {}
    },
    "test": {
        "files": {
            "exclude": ["src/*"]
        }
    }
}